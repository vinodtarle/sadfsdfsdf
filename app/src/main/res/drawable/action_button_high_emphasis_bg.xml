<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/interactiveForegroundActive">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/buttonRadius" />
        </shape>
    </item>

    <item>
        <selector>
            <item android:state_focused="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/interactiveForegroundActive" />
                    <corners android:radius="@dimen/buttonRadius" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/interactiveForegroundDisabled" />
                    <corners android:radius="@dimen/buttonRadius" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/interactiveForegroundNormal" />
                    <corners android:radius="@dimen/buttonRadius" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>